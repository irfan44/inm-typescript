---
import Navbar from '@components/Navbar'
import Meta from '../components/Meta.astro'
import '../styles/index.css'
import Footer from '@components/Footer'

const {
  title = "Hi I'm Irfan",
  description = "I'm a software engineer, writer, and creator. I write about software engineering, productivity, and personal growth.",
  currentPath = '/',
  ogImage = 'https://res.cloudinary.com/dflb9qqcu/image/upload/v1714299015/irfannm/logo.png',
} = Astro.props
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title} - Irfan Nurghiffari Muhajir</title>

    <link rel="icon" type="image/svg+xml" href="/meta/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />

    <Meta title={title} description={description} currentPath={currentPath} ogImage={ogImage} />
  </head>
  <body class="antialiased scroll-smooth">
    <Navbar />
    <main class="mt-16 min-h-screen container mx-auto px-5 md:px-16 lg:px-32">
      <slot />
    </main>
    <Footer />
  </body>
</html>
