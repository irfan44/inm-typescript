---
interface Props {
  isActive: boolean
}

const { isActive } = Astro.props
---

<button role="tab">
  <div class="relative px-3 py-1">
    <span class="relative z-[1]">
      <slot />
    </span>
    {
      isActive && (
        <div class="absolute left-0 right-0 top-0 z-[0] h-full rounded-full bg-white dark:bg-neutral-900" />
      )
    }
  </div>
</button>
