---
const {
  title = "Hi I'm Irfan",
  description,
  currentPath = '/',
  ogImage = 'https://res.cloudinary.com/dflb9qqcu/image/upload/v1714299015/irfannm/logo.png',
} = Astro.props
---
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={ogImage} />
<meta property="og:url" content={`https://irfannm.com${currentPath}`} />
<meta property="og:type" content="website" />
<meta
  property="og:site_name"
  content={`${title} - Irfan Nurghiffari Muhajir`}
/>

<link rel="apple-touch-icon" sizes="180x180" href="/meta/apple-touch-icon.png" />
<link rel="icon" type="image/png" sizes="32x32" href="/meta/favicon-32x32.png" />
<link rel="icon" type="image/png" sizes="16x16" href="/meta/favicon-16x16.png" />
<link rel="mask-icon" href="/meta/safari-pinned-tab.svg" color="#000000" />
<link rel="shortcut icon" href="/meta/favicon.ico" />

<link rel="manifest" href="/meta/manifest.webmanifest" />
